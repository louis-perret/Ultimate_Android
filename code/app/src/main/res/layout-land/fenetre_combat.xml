<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fond" />

    <ImageView
        android:id="@+id/imageAllie"
        android:layout_width="87dp"
        android:layout_height="129dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="279dp" />

    <ImageView
        android:id="@+id/imageEnnemi"
        android:layout_width="90dp"
        android:layout_height="169dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="484dp"
        tools:layout_editor_absoluteY="121dp" />

    <Button
        android:id="@+id/attaque4Allie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="effectuerUneManche"
        app:layout_constraintStart_toEndOf="@+id/attaque3Allie"
        app:layout_constraintTop_toBottomOf="@+id/attaque2Allie" />

    <Button
        android:id="@+id/attaque3Allie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="effectuerUneManche"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attaque1Allie" />

    <Button
        android:id="@+id/attaque2Allie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="effectuerUneManche"
        app:layout_constraintStart_toEndOf="@+id/attaque1Allie"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/attaque1Allie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="effectuerUneManche"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vieAllie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textSize="50px"
        app:layout_constraintEnd_toStartOf="@+id/etatEnnemi"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/vieEnnemi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50px"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/etatAllie"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toStartOf="@+id/vieAllie"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/etatEnnemi"
        android:layout_width="63dp"
        android:layout_height="77dp"
        app:layout_constraintEnd_toStartOf="@+id/vieEnnemi"
        app:layout_constraintTop_toTopOf="@+id/imageView"/>

</androidx.constraintlayout.widget.ConstraintLayout>